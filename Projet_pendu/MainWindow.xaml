                <BitmapImage UriSource="erreur_4.png" />
            </Image.Source>
        </Image>
        <Image Panel.ZIndex="0"  x:Name="erreur5" Margin="505,205,686,613">
            <Image.Source>
                <BitmapImage UriSource="erreur_5.png" />
            </Image.Source>
        </Image>
        <Image Panel.ZIndex="0"  x:Name="erreur6" Margin="466,152,725,666" Width="729" d:LayoutOverrides="HorizontalAlignment">
