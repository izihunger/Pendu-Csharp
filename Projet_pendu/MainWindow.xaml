<Window x:Class="Projet_pendu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_pendu"
        mc:Ignorable="d"
        Title="Jeu du pendu" Height="1080" Width="1920">
    <Window.Resources>
        <Style x:Key="formeBlanche" TargetType="Control">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
        </Style>
        <!--Transparence visuel des rectangles-->
        <Style x:Key="transparenceRectangle" TargetType="Rectangle">
            <Setter Property="Opacity" Value="0.2" />
        </Style>
        <Style x:Key="transparenceTiret" TargetType="Label">
            <Setter Property="Opacity" Value="0.5" />
        </Style>

    </Window.Resources>
    <Grid>
        <Image Panel.ZIndex="0" x:Name="image_background" Stretch="UniformToFill">
            <Image.Source>
                <BitmapImage UriSource="far_west.jpg" />
            </Image.Source>
        </Image>
        <Button Content="Button" HorizontalAlignment="Left" Margin="950,531,0,0" Width="75" Height="20" VerticalAlignment="Top"/>
        <TextBox Background="White" Name="input_jeux" Width="680" Margin="616,811,616,183" KeyDown="input_jeux_KeyDown"/>
        <Rectangle Style="{StaticResource transparenceRectangle}" Fill="#FFF4F4F5" Height="508" Margin="1308,53,244,488" Stroke="Black" Width="360" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Rectangle Style="{StaticResource transparenceRectangle}" Fill="#FFF4F4F5"  Height="508" Margin="250,53,686,488" Stroke="Black"  Width="976"/>
        <Label Style ="{StaticResource transparenceTiret}" Name="labelMotATrouver" Content="" FontSize="70" Margin="0, 300, 0, 0" Height="200" Width="1035" HorizontalAlignment="Center"/>

        <Label Content="Label" HorizontalAlignment="Left" Margin="278,866,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="376,866,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" Name="TestBtn" HorizontalAlignment="Left" Margin="1388,846,0,0" VerticalAlignment="Top" Width="75" Click="TestBtn_Click"/>
        <Label Content="" Name="labelLettresFausses" HorizontalAlignment="Left" Margin="1388,203,0,0" VerticalAlignment="Top" Height="296" Width="180"/>
        <Label Content="Lettre fausses :" HorizontalAlignment="Right" Height="36" Margin="0,108,425,0" VerticalAlignment="Top" Width="138"/>
    </Grid>
</Window>
